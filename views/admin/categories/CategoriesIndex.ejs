<%- include('../../partials/header.ejs') %>

    <%- include('../../partials/navbar.ejs') %>

        <div class="container">
            <hr>
            <h2>Categories</h2>
            <a href="/admin/categories/new" class="btn btn-success">Create a new category</a>
            <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th> Slug</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% categories.forEach(category=>{%>
                        <tr>
                            <th>
                                <%=category.id %>
                            </th>
                            <th>
                                <%=category.title%>
                            </th>
                            <th>
                                <%=category.slug %>
                            </th>
                            <th >
                    
                        <input type="hidden">
                                <button class="btn btn-warning">Edit</button>

                                <form method="post" action="/categories/delete" style="display: inline;" onsubmit="confirmDelete(event,this)">

                                    <input type="hidden" name="id" value="<%= category.id %>" >
                                    <button class="btn btn-dark">Delete</button>

                                </form>

                            </th>
                        </tr>

                        <% }) %>
                </tbody>
            </table>


        </div>

        <%- include('../../partials/footer.ejs') %>
        <script>
            function confirmDelete(event,form){
                event.preventDefault();
                var decision = confirm("Do you want delete this category?");
                if(decision){
                    form.submit();
                }
            }
        </script>